{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "useUnknownInCatchVariables": false,
    "sourceMap": true,
    "strict": true,
    "target": "ES2017",
    "strictPropertyInitialization": false,
    "noEmit": true
  },
  "exclude": ["**/__snapshots__/**", "**/test/**", "**/*.test.ts"]
}
